{
  "name": "template-nextjs-tailwindcss",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "TAILWIND_MODE=watch NODE_ENV=development next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint . --cache",
    "format": "prettier --write '**/*.{js,ts,tsx,json}'",
    "typecheck": "tsc --pretty --noEmit",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "prepare": "husky install",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook",
    "generate-css-types": "tailwindcss-classnames -i ./tailwind.config.js -o ./src/utils/tailwindcss.ts"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "next lint . --cache --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "3.0.23",
    "tailwindcss-classnames": "3.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@storybook/addon-actions": "6.4.19",
    "@storybook/addon-essentials": "6.4.19",
    "@storybook/addon-links": "6.4.19",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/builder-webpack5": "6.4.19",
    "@storybook/manager-webpack5": "6.4.19",
    "@storybook/react": "6.4.19",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.4",
    "@testing-library/react-hooks": "7.0.2",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.41",
    "@types/tailwindcss": "3.0.9",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@vitejs/plugin-react": "1.2.0",
    "autoprefixer": "10.4.4",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "lint-staged": "12.3.7",
    "postcss": "8.4.12",
    "prettier": "2.6.0",
    "typescript": "4.6.2",
    "vitest": "0.7.7"
  },
  "resolutions": {
    "webpack": "^5.0.0"
  }
}
